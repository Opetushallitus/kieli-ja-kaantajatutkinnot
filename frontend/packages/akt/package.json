  "scripts": {
    "akt:eslint": "yarn g:eslint --fix \"./src/**/*.{js,jsx,ts,tsx,json}\"",
    "akt:stylelint": "yarn g:stylelint --fix \"./src/**/*.scss\"",
    "akt:tslint": "yarn g:tsc --pretty --noEmit",
    "akt:lint": "yarn akt:eslint && yarn akt:tslint && yarn akt:stylelint",
    "akt:format": "yarn g:prettier --check \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "akt:format:write": "yarn g:prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "akt:test:jest": "yarn g:jest",
    "akt:test:cypress": "TZ=Europe/Helsinki yarn g:cypress run",
    "akt:test:cypress:open": "TZ=Europe/Helsinki yarn g:cypress open",
    "akt:start": "yarn g:webpack serve --config webpack.config.js --env proxy=http://localhost:8080",
    "akt:start:docker-compose": "yarn g:webpack serve --config webpack.config.js --env proxy=http://akt-backend:8080",
    "akt:start:ci:e2e": "yarn g:webpack serve --config webpack.config.js --no-open & yarn akt:test:cypress",
    "akt:qa": "yarn akt:lint && yarn akt:format && yarn akt:test:jest && yarn akt:start:ci:e2e",
    "akt:build": "yarn g:webpack --env prod"
  }
}
